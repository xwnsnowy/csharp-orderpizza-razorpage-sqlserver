<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow" style="font-weight: 700">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img src="~/images/online-order-logo.png" alt="OrderFoodWeb Logo" class="logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav" style="justify-content:space-between">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Products/Index">Menu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/About/Index">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Contact/Index">Contact</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto auth-links" style="justify-content:center; align-items: center">
                    @if (Context.Session.GetString("Username") != null)
                    {
                        <li class="nav-item" style="margin-right:5px">
                            <span class="nav-link">Hello, @Context.Session.GetString("Username")</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white btn-primary" asp-area="" asp-page="/Login/Index" style="background-color: red; padding-left: 30px; padding-right:30px;" asp-page-handler="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item" style="margin-right:5px">
                            <a class="nav-link" asp-area="" asp-page="/Login/Index">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white btn-primary" asp-area="" asp-page="/Register/Index" style="background-color: red; padding-left: 30px; padding-right:30px;">Register</a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link text-black" asp-area="" asp-page="/Cart/Index">
                            <i class="fa-solid fa-cart-shopping" style="position: relative;">
                                <span id="cartCount" class="badge badge-pill badge-danger" style="background-color:black;font-size:0.55em; position: absolute; top: -10px; right: -8px;">
                                    @Context.Session.GetInt32("CartCount")
                                </span>
                            </i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

